{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": ".build",
    "declaration": true,
    "strict": true
  },
  "include": ["index.ts"],
  "exclude": ["**/*.spec.ts", "node_modules"]
}
